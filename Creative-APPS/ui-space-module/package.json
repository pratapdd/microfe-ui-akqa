{
  "name": "@microfeui/ui-space-module",
  "version": "1.0.0",
  "scripts": {
    "commit": "git-cz",
    "prebuild": "rimraf dist",
    "start": "npm run watch:css && webpack serve --config config/webpack.dev.js",
    "webpack:prod": "webpack --config config/webpack.prod.js",
    "build": "npm-run-all prebuild webpack:prod",
    "lint": "eslint .",
    "watch:css": "postcss src/assets/tailwind.css -o src/assets/main.css",
    "link-components": "yarn link \"@pratapdd/microfe-ui-components\"",
    "test": "jest --no-cache --coverage",
    "test:coverage": "jest --no-cache --coverage --runInBand",
    "validate": "npm-run-all --parallel lint test build",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "semantic-release": "semantic-release",
    "copy": "rimraf ../ui-container-app/s3_bucket/latest/space/* && cp ./dist/* ../ui-container-app/s3_bucket/latest/space/"
  },
  "license": "MIT",
  "dependencies": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router-dom": "^5.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/plugin-transform-modules-commonjs": "^7.12.1",
    "@babel/plugin-transform-runtime": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-react": "^7.12.10",
    "@babel/preset-typescript": "^7.12.7",
    "@babel/register": "^7.12.10",
    "@babel/runtime": "^7.12.5",
    "@svgr/webpack": "^5.5.0",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.3",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-router-dom": "^5.1.7",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "autoprefixer": "^10.2.1",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "clean-webpack-plugin": "^3.0.0",
    "codecov": "^3.8.1",
    "commitizen": "^4.2.3",
    "cross-env": "^7.0.3",
    "css-loader": "^5.0.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-cypress": "^2.11.2",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.0.0-alpha.3",
    "husky": "^4.3.8",
    "json-loader": "^0.5.7",
    "mini-css-extract-plugin": "^1.3.3",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^8.3.1",
    "postcss-loader": "^4.1.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "semantic-release": "^17.3.7",
    "style-loader": "^2.0.0",
    "tailwindcss": "^2.0.2",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3",
    "url-loader": "^4.1.1",
    "webpack": "^5.24.4",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^3.11.2",
    "webpack-merge": "^5.2.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run validate"
    }
  }
}
